@page
@model feedbackApp.Pages.AdminHomeModel
@{
    Layout = "_Layout";
}
<div class="container-fluid px-2 px-md-5">
    <div class="card shadow mb-4 mt-4">
        <div class="card-header bg-primary text-white">
            <h2 class="mb-0">Events Overview</h2>
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-hover align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Event Name</th>
                            <th>View Statistics</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach(var evnt in Model.Events)
                        {
                            <tr>
                                <td class="text-break">@evnt.EventName</td>
                                <td>
                                    <a asp-page="adminDashboard" asp-route-eventShortName="@evnt.EventShortName" class="btn btn-info btn-sm fw-semibold shadow">View Event Statistics</a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <style>
       @@media (max-width: 600px) {
            .card {
                margin-top: 1rem !important;
            }
            .table {
                font-size: 0.95rem;
            }
            .btn {
                font-size: 0.95rem !important;
                padding: 0.4rem 1rem !important;
            }
        }
        .text-break {
            word-break: break-word;
            white-space: normal;
        }
    </style>
</div>
